<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- res/layout/toolbar_formatting.xml -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Alignment Buttons -->
        <ImageButton
            android:id="@+id/btn_align_left"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_align_left"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:id="@+id/btn_align_center"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_align_center"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:id="@+id/btn_align_right"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_align_right"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:id="@+id/btn_align_justify"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_align_justify"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:id="@+id/btn_bold"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_bold"
            android:background="?attr/selectableItemBackgroundBorderless" />


        <!-- Text Color -->
        <ImageButton
            android:id="@+id/btn_text_color"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_color"
            android:background="?attr/selectableItemBackgroundBorderless" />


        <ImageButton
            android:id="@+id/btn_italic"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_italic"
            android:background="?attr/selectableItemBackgroundBorderless" />
        />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>