<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp"
    android:background="@drawable/bg_item_note_preview"
    android:elevation="10dp">

    <!-- Note image preview -->
    <ImageView
        android:id="@+id/note_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="12dp"
        android:scaleType="centerCrop"
        android:contentDescription="Note Image"
        android:visibility="gone" /> <!-- Hidden by default -->

    <!-- Note preview text -->
    <TextView
        android:id="@+id/note_preview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="12dp"
        android:text="This is a preview of the note..."
        android:textSize="16sp"
        android:textColor="@color/primary_home_text"
        android:maxLines="3"
        android:ellipsize="end"/>

    <!-- Separator -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:src="@drawable/separator_item_note_preview" />

    <!-- Date of the note -->
    <TextView
        android:id="@+id/note_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="5dp"
        android:text="Sunday, Jan 21"
        android:textSize="14sp"
        android:textColor="@color/primary_home_text"/>
</LinearLayout>
