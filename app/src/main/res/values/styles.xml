<resources>
    <!-- Custom theme for NumberPicker -->
    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">#4E4E4E</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">21sp</item>
    </style>

    <!-- Custom style for PopupMenu items -->
    <style name="MenuItemFontStyle">
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">@font/josefin_sans_medium</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">#E0E7B5</item>
    </style>

    <!-- styles.xml -->
    <style name="CustomPopupMenuText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#4D5036</item> <!-- Màu văn bản, ví dụ: màu đỏ -->
        <item name="android:background">#E0E7B5</item> <!-- Màu nền, ví dụ: màu vàng -->
    </style>

    <!-- Custom style for AlertDialog -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/bg_round_dialog</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>
</resources>



